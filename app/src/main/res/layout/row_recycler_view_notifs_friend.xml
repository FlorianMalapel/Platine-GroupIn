<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:elevation="10dp"
                android:background="@color/lightGray">

        <ImageView
            android:id="@+id/imageViewProfilPictureFriend"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/darth_vader"/>

        <TextView
            android:id="@+id/textViewDisplayNameFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/displayName"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/textViewBasicTextColor"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewProfilPictureFriend"/>

        <ImageButton
            android:id="@+id/imageButtonReject"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circled_background_red"
            android:src="@drawable/ic_clear"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:id="@+id/imageButtonConfirm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circled_background_green"
            android:src="@drawable/ic_done"
            android:elevation="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


</RelativeLayout>