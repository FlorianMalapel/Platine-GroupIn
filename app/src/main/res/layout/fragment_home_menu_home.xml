<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/relativeLayoutContainer"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/linearLayoutNotifsFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNotifsFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifsFriendship"
            android:textColor="@android:color/white"
            android:background="@color/GIBlue"
            android:drawableRight="@drawable/ic_keyboard_arrow_up"
            android:padding="10dp"
            android:gravity="left|center_vertical"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNotifsFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutNotifsGroups"
        android:layout_below="@+id/linearLayoutNotifsFriends"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNotifsGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifsGroup"
            android:textColor="@android:color/white"
            android:background="@color/GIBlue"
            android:drawableRight="@drawable/ic_keyboard_arrow_up"
            android:padding="10dp"
            android:gravity="left|center_vertical"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNotifsGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>